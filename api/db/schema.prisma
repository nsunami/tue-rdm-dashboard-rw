generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id                          Int             @id @default(autoincrement())
  figshare_url                String?
  description                 String
  funding                     String?
  version                     Int
  status                      String?
  size                        BigInt?
  created_date                DateTime
  modified_date               DateTime
  is_public                   Boolean
  is_confidential             Boolean
  is_metadata_record          Boolean
  confidential_reason         String?
  metadata_reason             String?
  tags                        String[]
  references                  String[]
  has_linked_file             Boolean
  citation                    String?
  is_embargoed                Boolean
  embargo_date                DateTime?
  embargo_type                String?
  embargo_title               String?
  embargo_reason              String?
  uuid                        String
  title                       String
  doi                         String          @unique
  handle                      String
  url                         String
  published_date              DateTime
  thumb                       String
  defined_type                Int
  defined_type_name           String
  group_id                    Int
  url_private_api             String
  url_public_api              String
  url_private_html            String
  url_public_html             String
  resource_title              String
  resource_doi                String
  agreed_to_deposit_agreement Boolean
  agreed_to_publish           Boolean
  licenseId                   Int
  timelineId                  Int
  license                     License         @relation(fields: [licenseId], references: [id])
  timeline                    Timeline        @relation(fields: [timelineId], references: [id])
  authors                     Author[]        @relation("AuthorToItem")
  categories                  Category[]      @relation("CategoryToItem")
  custom_fields               CustomField[]   @relation("CustomFieldToItem")
  embargo_options             EmbargoOption[] @relation("EmbargoOptionToItem")
  files                       File[]          @relation("FileToItem")
  funding_list                FundingList[]   @relation("FundingListToItem")
}

model Author {
  id        Int      @id @default(autoincrement())
  uuid      String?
  full_name String?
  is_active Boolean?
  url_name  String?
  orcid_id  String?
  items     Item[]   @relation("AuthorToItem")
}

model Category {
  id          Int     @id @default(autoincrement())
  uuid        String
  title       String
  parent_id   Int?
  parent_uuid String?
  path        String
  source_id   Int?
  taxonomy_id Int?
  items       Item[]  @relation("CategoryToItem")
}

model CustomField {
  id    Int      @id @default(autoincrement())
  name  String
  value String[]
  items Item[]   @relation("CustomFieldToItem")
}

model EmbargoOption {
  id    Int    @id @default(autoincrement())
  type  String
  items Item[] @relation("EmbargoOptionToItem")
}

model File {
  id            Int     @id @default(autoincrement())
  uuid          String?
  name          String
  size          BigInt
  is_link_only  Boolean
  is_incomplete Boolean
  download_url  String
  supplied_md5  String?
  computed_md5  String
  items         Item[]  @relation("FileToItem")
}

model FundingList {
  id              Int     @id @default(autoincrement())
  uuid            String
  title           String
  grant_code      String
  funder_name     String?
  is_user_defined Int?
  url             String?
  items           Item[]  @relation("FundingListToItem")
}

model License {
  id    Int    @id @default(autoincrement())
  value Int
  name  String
  url   String
  items Item[]
}

model Timeline {
  id                   Int       @id @default(autoincrement())
  posted               DateTime
  revision             DateTime?
  submission           DateTime?
  firstOnline          DateTime
  publisherPublication DateTime?
  items                Item[]
}
